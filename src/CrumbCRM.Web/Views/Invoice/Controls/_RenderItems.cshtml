@model List<CrumbCRM.Invoice>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div class="item" data-id="@item.ID">
        <div class="left">
            <form class="inline hidden">
                <input type="checkbox" /></form>
            <span class="txt-large no-bold">@item.Title</span>
            <span class="edit hidden"><a href="/invoice/edit/@item.ID"><i class="icon-small icon-dark icon-edit"></i>edit</a></span>
            <span class="delete hidden"><a href="/invoice/delete/@item.ID"><i class="icon-small icon-dark icon-remove"></i>delete</a></span>
            <span class="print hidden"><a href="/invoice/print/@item.ID"><i class="icon-small icon-dark icon-download"></i>download</a></span>
        </div>
        <!-- /left -->

        <div class="right">
            <div class="date">@item.CreatedDate.ToString("dd MMM yyyy")</div>
        </div>
        <!-- /right -->
    </div> <!-- /item -->
}
@if (ViewBag.Next != null)
{
    <div class="content-loading" data-next="@ViewBag.Next">
        <img src="/Content/Images/ajax-loader.gif" />
    </div>
}